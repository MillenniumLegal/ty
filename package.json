{
  "name": "millennium-legal-crm",
  "version": "1.0.0",
  "description": "Millennium Legal CRM and Lead Automation System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
